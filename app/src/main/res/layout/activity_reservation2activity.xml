<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/little_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/reservation2_textcentral"
        android:textSize="32dp"
        android:paddingTop="50dp"
        android:textColor="@color/colortexte_resa2"
        />

    <EditText
        android:id="@+id/edittext_message"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorRadius"
        android:hint="Votre message ..."
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/little_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorEditViewProfil" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Prix final : "
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edittext_message"
        android:layout_marginTop="30dp"
        android:id="@+id/calcul_prix_final"
        ></TextView>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:background="@drawable/buttonview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textAllCaps="false"
        android:text="Valider"
        android:textColor="@color/colorTextbutton"
        android:textSize="25dp"
        />


    />

</android.support.constraint.ConstraintLayout>